reduce #MC .
reduce #MO .

reduce wellFormed(#M) .
reduce wellFormed(#MC) .
reduce wellFormed(#MO) .

reduce leastSort (#M, init(0)) .
reduce wellFormed(#M, init(0)) .
reduce wellFormed(#M, init(1)) .
reduce wellFormed(#M, init(2)) .
reduce wellFormed(#M, init(3)) .
